# Comma-separated list of your Gemini API Keys
GEMINI_API_KEYS=your_key_1,your_key_2

# Gemini API Base URL
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Maximum number of retries for a failed API request
MAX_RETRIES=3

# Maximum failures allowed per key before it's temporarily disabled
MAX_FAILURES=3

# Time in seconds to wait before re-enabling a disabled key (e.g., 3600 for 1 hour)
CHECK_INTERVAL_SECONDS=3600

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database URL
# For SQLite (development): DATABASE_URL=sqlite:///./data/gemini-vault.db
# For PostgreSQL (production): DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_URL=sqlite:///./data/gemini-vault.db

# JWT Settings
# IMPORTANT: This should be a strong, randomly generated secret key.
# You can generate one using: openssl rand -hex 32
